    <entity class="com.bitpay.demo.invoice.domain.payment.InvoicePaymentTotal" access="FIELD">
        <table name="invoice_payment_total"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <many-to-one name="invoicePayment" fetch="LAZY">
                <join-column name="invoice_payment_id" referenced-column-name="id"/>
            </many-to-one>
            <one-to-many name="exchangeRates" fetch="EAGER" orphan-removal="true"
                         target-entity="com.bitpay.demo.invoice.domain.payment.InvoicePaymentExchangeRate"
                         mapped-by="paymentTotal">
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>
            <one-to-many name="paymentCodes" fetch="EAGER" orphan-removal="true"
                         target-entity="com.bitpay.demo.invoice.domain.payment.InvoicePaymentCode"
                         mapped-by="paymentTotal">
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>
            <one-to-one name="supportedTransactionCurrency" fetch="LAZY" target-entity="com.bitpay.demo.invoice.domain.payment.InvoicePaymentSupportedTransactionCurrency">
                <join-column name="supported_transaction_currency_id"/>
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-one>
            <one-to-one name="minerFee" fetch="LAZY" target-entity="com.bitpay.demo.invoice.domain.payment.InvoicePaymentMinerFee">
                <join-column name="miner_fee_id"/>
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-one>
            <embedded name="currencyCode">
                <attribute-override name="value">
                    <column name="currencyCode"/>
                </attribute-override>
            </embedded>
            <embedded name="total">
                <attribute-override name="value">
                    <column name="total"/>
                </attribute-override>
            </embedded>
            <embedded name="subtotal">
                <attribute-override name="value">
                    <column name="subtotal"/>
                </attribute-override>
            </embedded>
            <embedded name="displayTotal">
                <attribute-override name="value">
                    <column name="display_total"/>
                </attribute-override>
            </embedded>
            <embedded name="displaySubtotal">
                <attribute-override name="value">
                    <column name="display_subtotal"/>
                </attribute-override>
            </embedded>
        </attributes>
    </entity>

    <entity class="com.bitpay.demo.invoice.domain.payment.InvoicePaymentExchangeRate" access="FIELD">
        <table name="invoice_payment_exchange_rate"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <many-to-one name="paymentTotal" fetch="LAZY">
                <join-column name="invoice_payment_total_id" referenced-column-name="id"/>
            </many-to-one>
            <embedded name="currencyCode">
                <attribute-override name="value">
                    <column name="currency_code"/>
                </attribute-override>
            </embedded>
            <embedded name="exchangeRate">
                <attribute-override name="value">
                    <column name="exchange_rate"/>
                </attribute-override>
            </embedded>
        </attributes>
    </entity>

    <entity class="com.bitpay.demo.invoice.domain.payment.InvoicePaymentCode" access="FIELD">
        <table name="invoice_payment_code"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <many-to-one name="paymentTotal" fetch="LAZY">
                <join-column name="invoice_payment_total_id" referenced-column-name="id"/>
            </many-to-one>
            <embedded name="paymentCode">
                <attribute-override name="value">
                    <column name="payment_code"/>
                </attribute-override>
            </embedded>
            <embedded name="paymentCodeUrl">
                <attribute-override name="value">
                    <column name="payment_code_url"/>
                </attribute-override>
            </embedded>
        </attributes>
    </entity>

    <entity class="com.bitpay.demo.invoice.domain.payment.InvoicePaymentSupportedTransactionCurrency" access="FIELD">
        <table name="invoice_payment_supported_transaction_currency"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <embedded name="enabled">
                <attribute-override name="value">
                    <column name="enabled"/>
                </attribute-override>
            </embedded>
            <embedded name="reason">
                <attribute-override name="value">
                    <column name="reason"/>
                </attribute-override>
            </embedded>
        </attributes>
    </entity>

    <entity class="com.bitpay.demo.invoice.domain.payment.InvoicePaymentMinerFee" access="FIELD">
        <table name="invoice_payment_miner_fee"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <embedded name="satoshisPerByte">
                <attribute-override name="value">
                    <column name="satoshis_per_byte"/>
                </attribute-override>
            </embedded>
            <embedded name="totalFee">
                <attribute-override name="value">
                    <column name="total_fee"/>
                </attribute-override>
            </embedded>
            <embedded name="fiatAmount">
