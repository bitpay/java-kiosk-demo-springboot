    <entity class="com.bitpay.demo.invoice.domain.buyer.InvoiceBuyerProvidedInfo" access="FIELD">
        <table name="invoice_buyer_provided_info"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <embedded name="name">
                <attribute-override name="value">
