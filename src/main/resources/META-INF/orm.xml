                </attribute-override>
            </embedded>
            <embedded name="refundInfo">
                <attribute-override name="value">
                    <column name="refund_info"/>
                </attribute-override>
            </embedded>
            <embedded name="jsonPayProRequired">
                <attribute-override name="value">
                    <column name="json_pay_pro_required"/>
