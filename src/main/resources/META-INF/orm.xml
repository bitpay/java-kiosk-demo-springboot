<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
   http://java.sun.com/xml/ns/persistence/orm_2_2.xsd"
                 version="2.0">

    <description>Persistent mapping</description>

    <entity class="com.bitpay.demo.invoice.domain.Invoice" access="FIELD">
        <table name="invoice"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="createdDate">
                <column nullable="true"/>
            </basic>
            <basic name="expirationTime">
                <column nullable="true"/>
            </basic>
            <one-to-one name="invoicePayment" fetch="LAZY" target-entity="com.bitpay.demo.invoice.domain.InvoicePayment">
                <join-column name="invoice_payment_id"/>
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-one>
            <one-to-one name="invoiceBuyer" fetch="LAZY" target-entity="com.bitpay.demo.invoice.domain.InvoiceBuyer">
                <join-column name="invoice_buyer_id"/>
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-one>
            <embedded name="posData">
                <attribute-override name="value">
                    <column name="pos_data"/>
                </attribute-override>
            </embedded>
            <embedded name="price">
                <attribute-override name="value">
                    <column name="price"/>
                </attribute-override>
            </embedded>
            <embedded name="currency">
                <attribute-override name="value">
                    <column name="currency"/>
                </attribute-override>
            </embedded>
            <embedded name="status">
                <attribute-override name="value">
                    <column name="status"/>
                </attribute-override>
            </embedded>
            <embedded name="bitPayId">
                <attribute-override name="value">
                    <column name="bitpay_id"/>
                </attribute-override>
            </embedded>
            <embedded name="bitPayOrderId">
                <attribute-override name="value">
                    <column name="bitpay_order_id"/>
                </attribute-override>
            </embedded>
            <embedded name="facadeType">
                <attribute-override name="value">
                    <column name="facade_type"/>
                </attribute-override>
            </embedded>
            <embedded name="bitPayGuid">
                <attribute-override name="value">
                    <column name="bitpay_guid"/>
                </attribute-override>
            </embedded>
            <embedded name="exceptionStatus">
                <attribute-override name="value">
                    <column name="exception_status"/>
                </attribute-override>
            </embedded>
            <embedded name="bitPayUrl">
                <attribute-override name="value">
                    <column name="bitpay_url"/>
                </attribute-override>
            </embedded>
            <embedded name="redirectUrl">
                <attribute-override name="value">
                    <column name="redirect_url"/>
                </attribute-override>
            </embedded>
            <embedded name="closeUrl">
                <attribute-override name="value">
                    <column name="close_url"/>
                </attribute-override>
            </embedded>
            <embedded name="acceptanceWindow">
                <attribute-override name="value">
                    <column name="acceptance_window"/>
                </attribute-override>
            </embedded>
            <embedded name="token">
                <attribute-override name="value">
                    <column name="token"/>
                </attribute-override>
            </embedded>
            <embedded name="merchantName">
                <attribute-override name="value">
                    <column name="merchant_name"/>
                </attribute-override>
            </embedded>
            <embedded name="itemDescription">
                <attribute-override name="value">
                    <column name="item_description"/>
                </attribute-override>
            </embedded>
            <embedded name="billId">
                <attribute-override name="value">
                    <column name="bill_id"/>
                </attribute-override>
            </embedded>
        </attributes>
    </entity>

